#include <stdio.h>
 
int main() {
 
    int quantidade, codigo;
    double total;
    scanf("%d %d",&codigo,&quantidade);
    if(codigo==1)
    {
       total= 4.00*(double)quantidade;
       printf("Total: R$ %.2lf\n",total);
    }
    if(codigo==2)
    {
       total= 4.50*(double)quantidade;
       printf("Total: R$ %.2lf\n",total);
    }
    if(codigo==3)
    {
       total= 5.00*(double)quantidade;
       printf("Total: R$ %.2lf\n",total);
    }
    if(codigo==4)
    {
       total= 2.00*(double)quantidade;
       printf("Total: R$ %.2lf\n",total);
    }
    if(codigo==5)
    {
       total= 1.50*(double)quantidade;
       printf("Total: R$ %.2lf\n",total);
    }
    
    
 
    return 0;
}
